let pokemonRepository=function(){let t=[];function e(e){"object"==typeof e&&"name"in e&&"detailsUrl"in e?t.push(e):console.log("incorrect pokemon")}function n(){return t}function o(t){return fetch(t.detailsUrl).then(function(t){return t.json()}).then(function(e){t.imageUrl=e.sprites.front_default,t.height=e.height,t.types=e.types}).catch(function(t){console.error(t)})}function i(t){o(t).then(function(){var e;let n,o,i,a,l,r;e=t,n=$(".modal-title"),o=$(".modal-body"),$(".modal-header"),n.empty(),o.empty(),console.log(e),i=$('<h5 class= "modal-title">'+e.name+"</h5>"),(a=$('<img class="modal-img">')).attr("src",e.imageUrl),l=$("<p>Height : "+e.height+"</p>"),r=$("<p>Types: "+e.types.map(t=>t.type.name).join(" / ")+"</p>"),n.append(i),o.append(a),o.append(l),o.append(r)})}return{add:e,getAll:n,addListItem:function t(e){let n=document.querySelector(".pokemon-list"),o=document.createElement("li"),a=document.createElement("button");function l(){let t=$("<li></li>"),e=$("#input").val();t.append(e),""===e?alert("you must write something!!"):$("#list").append(t),t.on("dblclick",function e(){t.toggleClass("strike")});let n=$("<crossOutButton></crossOutButton>");n.append(document.createTextNode("X")),t.append(n),n.on("click",function e(){t.addClass("delete")}),$("#list").sortable()}o.classList.add("list-group-item"),a.innerText=e.name,a.classList.add("btn","btn-primary","btn-lg"),a.setAttribute("data-target","#exampleModal"),a.setAttribute("data-toggle","modal"),a.addEventListener("click",function(t){i(e)}),o.appendChild(a),n.appendChild(o)},loadList:function t(){return fetch("https://pokeapi.co/api/v2/pokemon/?limit=150").then(function(t){return t.json()}).then(function(t){t.results.forEach(function(t){e({name:t.name,detailsUrl:t.url})})}).catch(function(t){console.error(t)})},loadDetails:o,showDetails:i}}();pokemonRepository.loadList().then(function(){pokemonRepository.getAll().forEach(function(t){pokemonRepository.addListItem(t)})});